<Window  
   x:Class="ProjetoLPDS.Views.Pautas"  
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
   xmlns:local="clr-namespace:ProjetoLPDS.Views"  
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
   Title="Pautas"  
   Width="700"  
   Height="500"  
   Icon="pack://application:,,,/Images/AppIcon.png"  
   ResizeMode="CanMinimize"  
   WindowStartupLocation="CenterScreen"  
   mc:Ignorable="d" Loaded="Window_Loaded">  
   <Window.Resources>  
       <Style x:Key="HoverShadowButton" TargetType="Button">  
           <Setter Property="Effect">  
               <Setter.Value>  
                   <DropShadowEffect  
                       BlurRadius="0"  
                       Opacity="0"  
                       ShadowDepth="0" />  
               </Setter.Value>  
           </Setter>  
           <Style.Triggers>  
               <Trigger Property="IsMouseOver" Value="True">  
                   <Setter Property="Effect">  
                       <Setter.Value>  
                           <DropShadowEffect  
                               BlurRadius="10"  
                               Opacity="0.5"  
                               ShadowDepth="2" />  
                       </Setter.Value>  
                   </Setter>  
               </Trigger>  
           </Style.Triggers>  
       </Style>  
   </Window.Resources>  
   <Grid Background="#FFE3E3E3">  
       <!--  Top Bar  -->  
       <Border  
           Height="40"  
           VerticalAlignment="Top"  
           Background="#FF3F50B5">  
           <Grid>  
               <TextBlock  
                   Margin="20,0,0,0"  
                   VerticalAlignment="Center"  
                   FontSize="14"  
                   FontWeight="SemiBold"  
                   Foreground="White"  
                   Text="Sistema de Gestão de Avaliações" />
                <Button
    x:Name="btnVoltar"
    Width="67"
    Height="22"
    Margin="0,0,10,0"
    HorizontalAlignment="Right"
    VerticalAlignment="Center"
    HorizontalContentAlignment="Center"
    VerticalContentAlignment="Center"
    Background="White"
    BorderBrush="Transparent"
    BorderThickness="0"
    Click="btnVoltar_Click"
    Content="voltar"
    FontSize="14"
    Foreground="#3F51B5">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                x:Name="buttonVoltarBorder"
                Background="{TemplateBinding Background}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="buttonVoltarBorder" Property="Background" Value="#ebe8e8" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>  
       </Border>  

       <!--  Main Panel  -->  
       <Border  
           Margin="30,60,30,10"  
           Background="White"  
           BorderBrush="WhiteSmoke"  
           BorderThickness="1"  
           CornerRadius="10">  
           <StackPanel Margin="20,20,20,2">  
               <!--  Título  -->  
               <TextBlock  
                   Margin="0,0,0,10"  
                   HorizontalAlignment="Center"  
                   FontSize="18"  
                   FontWeight="Bold"  
                   Foreground="#FF3F50B5"><Run Language="pt-pt" Text="Pautas" /></TextBlock>  

               <!--  Botões  -->  
               <StackPanel  
                   Margin="0,0,0,10"  
                   HorizontalAlignment="Center"  
                   Orientation="Horizontal" />  

               <!--  Pesquisa  -->  
               <DockPanel Margin="0,0,0,10">  
                   <Label VerticalAlignment="Center" Content="Pesquisar:" />  
                   <TextBox  
                       x:Name="tbPesquisar"  
                       Width="400"  
                       Margin="5,0" 
                       TextChanged="tbPesquisar_TextChanged"/>  
                   <Button  
                       x:Name="btnPesquisar"  
                       Width="30"  
                       Height="25"  
                       Content="🔍" 
                       Click="btnPesquisar_Click"
                       Style="{StaticResource HoverShadowButton}" />  
               </DockPanel>  

               <!--  Tabela  -->
                <DataGrid  
                   x:Name="dataGridPautas"  
                   Height="230"  
                   Margin="0,0,0,10"  
                   HorizontalAlignment="Stretch"  
                   AutoGenerateColumns="False"  
                   CanUserAddRows="False"
                   CanUserResizeColumns="True"
                   IsReadOnly="True"  
                   HeadersVisibility="Column"  
                   ItemsSource="{Binding Notas}"  
                   RowDetailsVisibilityMode="VisibleWhenSelected"  
                   HorizontalScrollBarVisibility="Auto"  
                   ColumnWidth="SizeToCells">
                </DataGrid>  

               <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" >  
                   <Button  
                       x:Name="btnHistograma"  
                       Width="120"  
                       Height="28"  
                       Background="#4CAF50"  
                       BorderBrush="#45A049"  
                       Click="btnHistograma_Click"  
                       Content="Histograma"  
                       Foreground="White">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="buttonGravarBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3">       
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonGravarBorder" Property="Background" Value="#f7b336" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>  
               </StackPanel>  
           </StackPanel>  
       </Border>  
   </Grid>  
</Window>
