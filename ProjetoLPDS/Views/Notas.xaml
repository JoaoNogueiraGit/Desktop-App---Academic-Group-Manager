<Window
    x:Class="ProjetoLPDS.Views.Notas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjetoLPDS.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Notas"
    Width="750"
    Height="540"
    Icon="pack://application:,,,/Images/AppIcon.png"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="HoverShadowButton" TargetType="Button">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="0"
                        Opacity="0"
                        ShadowDepth="0" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="10"
                                Opacity="0.5"
                                ShadowDepth="2" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Border
            Height="40"
            VerticalAlignment="Top"
            Background="#FF3F50B5">
            <Grid>
                <TextBlock
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="Sistema de Gestão de Avaliações" />
                <Button
                x:Name="btnVoltar"
                Width="67"
                Height="22"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="White"
                BorderBrush="Transparent"
                BorderThickness="0"
                Click="btnVoltar_Click"
                Content="voltar"
                FontSize="14"
                Foreground="#3F51B5">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                x:Name="buttonVoltarBorder"
                Background="{TemplateBinding Background}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="buttonVoltarBorder" Property="Background" Value="#ebe8e8" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
        <Border
            Margin="50,70,50,22"
            Background="#FFF1ECEC"
            CornerRadius="10,10,10,10">
            <StackPanel Margin="20,20,20,20">
                <!--  Título  -->
                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#FF3F50B5"
                    Text="Lançar Classificações" />

                <!--  Row with Tarefa and Grupo  -->
                <StackPanel
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <!--  Tarefa section  -->
                    <StackPanel Margin="0,0,40,0" Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="#FF3F50B5"
                            Text="Grupo:" />
                        <ComboBox
                            x:Name="cbGrupo"
                            Width="200"
                            Height="30"
                            DisplayMemberPath="Nome"
                            ItemsSource="{Binding Grupos}"
                            SelectedValue="{Binding GrupoSelecionado, Mode=TwoWay}" />
                    </StackPanel>

                    <!--  Grupo section  -->
                    <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="#FF3F50B5"
                            Text="Tarefa:" />
                        <ComboBox
                            x:Name="cbTarefa"
                            Width="200"
                            Height="30"
                            DisplayMemberPath="Titulo"
                            ItemsSource="{Binding TarefasAssociadas}"
                            SelectedValue="{Binding TarefaSelecionada, Mode=TwoWay}" />
                    </StackPanel>
                </StackPanel>

                <DataGrid
                    x:Name="dataGridAlunos"
                    Height="200"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Stretch"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    HeadersVisibility="Column"                    
                    ItemsSource="{Binding NotasAlunos}"
                    SelectionMode="Extended"
                    SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="60" Header="Número" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Aluno.Numero}" ToolTip="{Binding Aluno.Numero}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*" Header="Nome" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Text="{Binding Aluno.Nome}"
                                        TextTrimming="CharacterEllipsis"
                                        ToolTip="{Binding Aluno.Nome}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="150" Header="Email" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Text="{Binding Aluno.Email}"
                                        TextTrimming="CharacterEllipsis"
                                        ToolTip="{Binding Aluno.Email}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Width="40"
                            Header="Nota"
                            IsReadOnly="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Text="{Binding Nota}"
                                        TextTrimming="CharacterEllipsis"
                                        HorizontalAlignment="Center"
                                        ToolTip="{Binding Nota}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Nota, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>

                <!-- Nota grupo section-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Left StackPanel -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left" Margin="0">
                        <TextBlock Margin="0,0,10,0"
                           VerticalAlignment="Center"
                           FontSize="16"     
                           FontWeight="Bold"
                           Foreground="#FF3F50B5"
                           Text="Atribuir nota ao grupo:"/>
                        <TextBox x:Name="tbNotaGrupo" Width="38" Height="24" RenderTransformOrigin="0.538,0.658"
                                 KeyDown="tbNotaGrupo_KeyDown"/>
                        <Button
                            x:Name="btnConfirmar"
                            Margin="5,0"
                            Width="26"
                            Height="26"
                            Background="#4CAF50"
                            BorderBrush="#45A049"
                            Click="btnConfirmar_Click"
                            Content="✅"
                            Foreground="White">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        x:Name="buttonGravarBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="buttonGravarBorder" Property="Background" Value="#f7b336" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </StackPanel>

                    <!-- Right StackPanel -->
                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Margin="0">
                        <Button
                            x:Name="btnPublicar"
                            Width="120"
                            Height="35"
                            Background="#4CAF50"
                            BorderBrush="#45A049"
                            Click="btnPublicar_Click"
                            Content="Publicar Notas"
                            Foreground="White">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        x:Name="buttonGravarBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3">       
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="buttonGravarBorder" Property="Background" Value="#f7b336" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

    </Grid>
</Window>