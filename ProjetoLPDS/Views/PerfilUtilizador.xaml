<Window
    x:Class="ProjetoLPDS.Views.PerfilUtilizador"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjetoLPDS.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Perfil do Utilizador"
    Width="500"
    Height="420"
    Background="#ebedf0"
    Icon="pack://application:,,,/Images/AppIcon.png"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Rectangle Grid.Row="0" Fill="#3F51B5" />
        <StackPanel
            Grid.Row="0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Margin="20,0,0,0"
                FontSize="18"
                Foreground="White"
                Text="Sistema de Gestão de Avaliações" />
            <Button
                x:Name="btnVoltar"
                Width="60"
                Height="20"
                Margin="135,0,20,0"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="White"
                BorderBrush="Transparent"
                BorderThickness="0"
                Click="btnVoltar_Click"
                Content="voltar"
                FontSize="14"
                Foreground="#3F51B5">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="buttonVoltarBorder"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="buttonVoltarBorder" Property="Background" Value="#ebe8e8" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!--  Main Content  -->
        <Border
            Grid.Row="1"
            Margin="50,20"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel
                Height="282"
                Margin="20,9,20,0"
                VerticalAlignment="Top">
                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="25"
                    Foreground="#3F51B5"
                    Text="Perfil do Utilizador" />

                <!--  User Profile Content  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!--  Photo Circle  -->
                    <Border
                        Grid.Column="0"
                        Width="100"
                        Height="100"
                        Margin="0,20,20,0"
                        Background="LightGray"
                        BorderBrush="#3F51B5"
                        BorderThickness="2"
                        CornerRadius="50">
                        <Grid>
                            <Image 
                                x:Name="UserPhoto" 
                                Stretch="UniformToFill"
                                Width="96"
                                Height="96">
                                <Image.Clip>
                                    <EllipseGeometry
                                        Center="48,48"
                                        RadiusX="48"
                                        RadiusY="48" />
                                </Image.Clip>
                            </Image>
                        </Grid>
                    </Border>

                    <!--  User Fields  -->
                    <StackPanel
                        Grid.Column="1"
                        Height="142"
                        VerticalAlignment="Center">
                        <TextBlock
                            Margin="0,20,0,5"
                            Foreground="#757575"
                            Text="Nome:" />
                        <TextBox
                            x:Name="NomeTextBox"
                            Height="20"
                            Margin="0,0,0,15"
                            RenderTransformOrigin="0.5,0.5"
                            Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"
                            ToolTip="Nome de utilizador" />

                        <TextBlock
                            Margin="0,0,0,5"
                            Foreground="#757575"
                            Text="Email:" />
                        <TextBox
                            x:Name="EmailTextBox"
                            Height="20"
                            Margin="0,0,0,15"
                            Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                            ToolTip="Email de utilizador" />
                    </StackPanel>
                </Grid>

                <!--  Bottom Action Buttons  -->
                <Button
                    x:Name="AlterarFotoButton"
                    Width="80"
                    Height="30"
                    HorizontalAlignment="Left"
                    Margin="12,0,0,0"
                    Background="#3F51B5"
                    Foreground="White" Click="AlterarFotoButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="buttonAlterarBorder"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                                <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="Alterar" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="buttonAlterarBorder" Property="Background" Value="#669aed" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <StackPanel
                    Margin="150,10,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        x:Name="GravarButton"
                        Width="80"
                        Height="30"
                        Margin="10,0,10,0"
                        Background="#4CAF50"
                        Click="GravarButton_Click"
                        Content="Gravar"
                        Foreground="White">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="buttonGravarBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonGravarBorder" Property="Background" Value="#62cc66" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button
                        x:Name="CancelarButton"
                        Width="80"
                        Height="30"
                        Margin="10,0,0,0"
                        Background="#F44336"
                        Content="Cancelar"
                        Foreground="White" Click="CancelarButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="buttonCancelarBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonCancelarBorder" Property="Background" Value="#eb5d52" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Border>



    </Grid>
</Window>
