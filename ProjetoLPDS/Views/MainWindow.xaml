<Window
    x:Class="ProjetoLPDS.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjetoLPDS"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Menu Principal"
    Width="550"
    Height="470"
    Background="#ebedf0"
    Icon="pack://application:,,,/Images/AppIcon.png"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  Resources  -->
    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3F51B5" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="30,5" />
            <Setter Property="BorderThickness" Value="0" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#669aed" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Rectangle Grid.Row="0" Fill="#3F51B5" />
        <StackPanel
            Grid.Row="0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Margin="20,5,0,0"
                FontSize="18"
                Foreground="White"
                Text="Sistema de Gestão de Avaliações" />
            <Button
                x:Name="PerfilBtn"
                Width="34"
                Height="34"
                Margin="200,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="#ffff"
                BorderBrush="Transparent"
                BorderThickness="0"
                Click="PerfilBtn_Click"
                Foreground="#3F51B5">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <StackPanel>
                            <Grid>
                                <Ellipse
                                    x:Name="buttonPerfilEllipse"
                                    Width="34"
                                    Height="34"
                                    Fill="{TemplateBinding Background}" />
                                <Image
                                    x:Name="profileImage"
                                    Width="34"
                                    Height="34"
                                    Source="{Binding CaminhoFotografia}"
                                    Stretch="UniformToFill">
                                    <Image.Clip>
                                        <EllipseGeometry
                                            Center="17,17"
                                            RadiusX="17"
                                            RadiusY="17" />
                                    </Image.Clip>
                                </Image>
                            </Grid>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="buttonPerfilEllipse" Property="Fill" Value="#ebe8e8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock x:Name="tbPerfil"
                Width="39"
                Margin="-200,5,10,0"
                Padding="4,2"
                VerticalAlignment="Top"
                Background="#3F51B5"
                FontSize="14"
                Foreground="White"
                Text="Perfil" />
        </StackPanel>

        <!--  Main Content  -->
        <Border
            Grid.Row="1"
            Margin="50,20"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel
                Height="330"
                Margin="20,9,20,0"
                VerticalAlignment="Top">
                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="25"
                    Foreground="#3F51B5"
                    Text="Menu Principal" />

                <Button
                    x:Name="GestaoAlunosBtn"
                    Click="GestaoAlunosBtn_Click"
                    Content="Gestão de Alunos"
                    Style="{StaticResource MenuButtonStyle}">
                    <Button.Effect>
                        <DropShadowEffect />
                    </Button.Effect>
                </Button>

                <Button
                    x:Name="GestaoTarefasBtn"
                    Click="GestaoTarefasBtn_Click"
                    Content="Gestão de Tarefas"
                    Style="{StaticResource MenuButtonStyle}">
                    <Button.Effect>
                        <DropShadowEffect />
                    </Button.Effect>
                </Button>

                <Button
                    x:Name="GestaoClassificacoesBtn"
                    Click="GestaoClassificacoesBtn_Click"
                    Content="Gestão de Classificações"
                    Style="{StaticResource MenuButtonStyle}">
                    <Button.Effect>
                        <DropShadowEffect />
                    </Button.Effect>
                </Button>

                <Button
                    x:Name="GestaoGruposBtn"
                    Click="GestaoGruposBtn_Click"
                    Content="Gestão de Grupos"
                    Style="{StaticResource MenuButtonStyle}">
                    <Button.Effect>
                        <DropShadowEffect />
                    </Button.Effect>
                </Button>

                <Button
                    x:Name="PautasBtn"
                    Click="PautasBtn_Click"
                    Content="Visualizar Pautas"
                    Style="{StaticResource MenuButtonStyle}">
                    <Button.Effect>
                        <DropShadowEffect />
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
